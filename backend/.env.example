# =============================================================================
# Environment Variables - Backend
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
DEBUG=True
SECRET_KEY=your-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# For Docker: postgres://postgres:postgres@db:5432/cfp_db
# For local: postgres://user:password@localhost:5432/dbname
DATABASE_URL=postgres://user:password@localhost:5432/dbname

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:80

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# -----------------------------------------------------------------------------
# Supabase Storage Buckets
# -----------------------------------------------------------------------------
SUPABASE_STORAGE_BUCKET_MEDIA=media
SUPABASE_STORAGE_BUCKET_3D=3d-models
SUPABASE_STORAGE_BUCKET_PROFILE=profiles

# -----------------------------------------------------------------------------
# Frontend URL (for CSRF trusted origins)
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:5173
